<div class="position-absolute d-flex flex-column pr-2 pt-2" id="toastsContainer">
  <% flash.each do |type, message| %>
    <div class="toast toast-<%= type.gsub('notice', 'info').gsub('alert', 'danger') %> ml-auto" role="alert" data-delay="60000" data-autohide="true">
      <div class="toast-header">
        <strong class="mr-auto"><%= t(type) %></strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
        <%= message %>
      </div>
    </div>
  <% end %>
</div>
<script>
  $(".toast").toast('show')
</script>