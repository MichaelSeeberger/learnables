<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<div class="row row-cols-1">
  <div class="col col-md-6"><strong>Description</strong>
    <div class="math-content">
      <%= @course.description %>
    </div>
  </div>
</div>

<div>
  <strong>Owner:</strong>
  <%= @course.owner.name %> (<%= @course.owner.user.email %>)
</div>

<div class="mt-4">
  <%= link_to 'Edit', edit_course_path(@course), class: 'btn btn-edit' if policy(@course).edit? %>
</div>

<%= render 'layouts/application/mathjax_init' %>
