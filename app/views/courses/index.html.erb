<% if @courses.empty? %>
  <% content_for :jumbotron do %>
    <h4>No Courses</h4>
    <% if current_user.staff? %>
      <p>Create a course!</p>
    <% else %>
      <p>You have not yet been assigned any courses! If you think there should be courses present, talk to your teachers
        or staff!</p>
    <% end %>
  <% end %>
<% else %>
  <h1>Courses</h1>

  <div class="courses-list row row-cols-1 row-cols-md-4">
    <% @courses.each do |course| %>
      <div class="col mb-4">
        <div class="card">
          <div class="card-header">
            <h5><%= course.title %></h5>
          </div>
          <div class="card-body math-content">
            <%= course.description %>
          </div>
          <div class="card-footer">
            <%= link_to 'Show', course, class: 'btn btn-show' %>
            <% if policy(course).edit? %>
              <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-edit' %>
            <% end %>
            <% if policy(course).destroy? %>
              <%= link_to 'Delete', course, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-delete' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<% if policy(Course).new? %>
  <%= link_to 'New Course', new_course_path, class: 'btn btn-new' %>
<% end %>

<%= render 'layouts/application/mathjax_init' %>