<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @student_profile.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @student_profile.user.email %>
</p>

<% if policy(@student_profile).edit? %>
  <%= link_to 'Edit', edit_student_profile_path(@student_profile), class: 'btn btn-edit' %>
<% end %>
<% if policy(StudentProfile).index? %>
  <%= link_to 'Show all Profiles', student_profiles_path, class: 'btn btn-back' %>
<% end %>