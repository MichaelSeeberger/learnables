<%= bootstrap_form_with(model: [section.course, section], local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.text_field :title %>

  <%= form.text_area :description, rows: '6' %>

  <div class="actions">
    <%= link_to 'Cancel',
                section.persisted? ? [@section.course, @section] : @section.course,
                class: 'btn btn-cancel ml-2',
                data: {confirm: 'Are you sure?'} %>
    <%= form.submit class: 'btn btn-submit' %>
  </div>
<% end %>
